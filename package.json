{
  "name": "getserved-socket",
  "version": "4.7",
  "description": "Websocket for getserved",
  "main": "./build/bin/www",
  "scripts": {
    "start": "node ./build/bin/www.js",
    "dev": "nodemon -L",
    "build": "tsc --build",
    "test": "jest"
  },
  "keywords": [
    "getserved",
    "socket"
  ],
  "license": "ISC",
  "dependencies": {
    "@socket.io/mongo-adapter": "^0.2.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.0",
    "mongodb": "^5.0.0",
    "pm2": "^5.2.2",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.1",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "jest": "^29.4.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "nodemonConfig": {
    "watch": "./src/bin/www",
    "ignore": [
      "*.test.ts",
      "node_modules/**/*"
    ],
    "execMap": {
      "ts": "ts-node"
    },
    "exec": "ts-node --transpileOnly ./src/bin/www",
    "env": {
      "NODE_ENV": "development",
      "NODE_PORT": 3000,
      "REDIS_HOST": "127.0.0.1",
      "REDIS_PORT": 6379,
      "AUTH_TOKEN": "123.456"
    }
  }
}
